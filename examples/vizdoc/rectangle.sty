}

Rect x {
  x.shape = Rectangle {
    strokeWidth : 2.0
    strokeColor : Colors.red
    strokeStyle : "solid"
    x: 0.0
    y: 0.0
    w: 150.0
    h: 100.0
    color: Colors.pink
  }
  x.w = Text {
     string: "w"
     x: x.shape.x
     y: x.shape.y + x.shape.h / 2.0 + 15.0
  }
  x.h = Text {
     string: "h"
     x: x.shape.x + x.shape.w / 2.0 + 15.0
     y: x.shape.y
  }
}

